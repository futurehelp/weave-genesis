{
  "expo": {
    "name": "Weave Genesis",
    "slug": "weave-genesis",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./icon.png",
    "scheme": "weavegenesis",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "jsEngine": "jsc",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.yada.weavegenesis",
      "icon": "./icon.png",
      "buildNumber": "3",
      "supportsTablet": true,
      "requireFullScreen": false,
      "config": {
        "usesNonExemptEncryption": false,
        "usesHermes": false
      },
      "associatedDomains": [
        "applinks:weavegenesis.app"
      ],
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to alert you when you leave your apartment.",
        "NSLocationAlwaysUsageDescription": "We need background location to detect when you've exited your apartment region.",
        "UIBackgroundModes": [
          "location"
        ],
        "UIApplicationSupportsIndirectInputEvents": true,
        "UILaunchStoryboardName": "SplashScreen",
        "UIApplicationShortcutItems": [
          {
            "UIApplicationShortcutItemType": "com.yada.weavegenesis.open-profile",
            "UIApplicationShortcutItemTitle": "Open Profile",
            "UIApplicationShortcutItemIconType": "UIApplicationShortcutIconTypeContact"
          },
          {
            "UIApplicationShortcutItemType": "com.yada.weavegenesis.new-post",
            "UIApplicationShortcutItemTitle": "New Post",
            "UIApplicationShortcutItemIconType": "UIApplicationShortcutIconTypeCompose"
          },
          {
            "UIApplicationShortcutItemType": "com.yada.weavegenesis.trigger-thread",
            "UIApplicationShortcutItemTitle": "Trigger Thread",
            "UIApplicationShortcutItemIconType": "UIApplicationShortcutIconTypePlay"
          }
        ]
      }
    },
    "android": {
      "package": "com.yada.weavegenesis",
      "versionCode": 1,
      "icon": "./assets/images/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "splash": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "weavegenesis"
            },
            {
              "scheme": "https",
              "host": "weavegenesis.app"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Weave Genesis",
      "shortName": "Weave",
      "lang": "en",
      "scope": "/",
      "themeColor": "#ffffff",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We use your location to alert you when you leave your apartment.",
          "locationAlwaysPermission": "We need background location to detect when you've exited your apartment region.",
          "locationWhenInUsePermission": "We use your location to alert you when you leave your apartment.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "static"
      },
      "eas": {
        "projectId": "d2434798-c764-4755-b74e-c3e8e6a7c502"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
